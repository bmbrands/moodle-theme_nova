          <div class="dropdown-menu" aria-labelledby="primarynavbutton">
            <a class="dropdown-item" href="{{{ config.wwwroot }}}/index.php?redirect=0">{{#str}}home{{/str}}</a>
            <a class="dropdown-item" href="{{{ config.wwwroot }}}/my">{{#str}}myhome{{/str}}</a>
            <a class="dropdown-item" href="{{{ config.wwwroot }}}/course">{{#str}}mycourses{{/str}}</a>
            <a class="dropdown-item" href="{{{ config.wwwroot }}}/admin/search.php">{{#str}}administrationsite{{/str}}</a>
          </div>
        </div>

        <ul class="navbar-nav my-2 d-none d-sm-flex">
            <li class="nav-item">
                <a class="nav-link" href="{{{ config.wwwroot }}}/index.php?redirect=0">
                    {{#str}}home{{/str}}
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{{ config.wwwroot }}}/my">
                    {{#str}}myhome{{/str}}
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{{ config.wwwroot }}}/course">
                    {{#str}}mycourses{{/str}}
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{{ config.wwwroot }}}/admin/search.php">{{#str}}administrationsite{{/str}}</a>
