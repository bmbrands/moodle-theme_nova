            <li class="d-flex align-items-center">
                {{{ output.search_box }}}
            </li>
            <!-- navbar_plugin_output -->
            <li class="nav-item d-flex">
                {{{ output.navbar_plugin_output }}}
            </li>
            <!-- user_menu -->
            <li class="nav-item d-flex align-items-center mr-3">
                {{{ output.user_menu }}}
            </li>
        </ul>
        <!-- search_box -->
    </div>
