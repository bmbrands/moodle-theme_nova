{{!
    @template theme_nova/megamenu

    This template renders the main content area for the myoverview block.

    Example context (json):
    {}
}}
<div id="searchmodal" class="modal fade" tabindex="-1" role="dialog" data-region="search-modal" style="margin-top: 100px;">
    <div class="modal-dialog" role="document">
        <div class="modal-content border-0">
            <div class="modal-body text-center px-3 py-1 bg-light">
                <div class="position-absolute icon-no-margin" style="right: 3px; top: 1px;">
                    <a class="text-dark" data-dismiss="modal" href="#">
                         {{#pix}} i/window_close, core, {{#str}} closebuttontitle {{/str}} {{/pix}}
                    </a>
                </div>
                <form class="mform" action="{{{wwwroot}}}/local/search/index.php">
                    <div class="input-group bg-white my-3">
                        <input
                            type="text"
                            name="search"
                            class="form-control form-control-lg"
                            placeholder="{{#str}} frontpage:search, theme_nova {{/str}}"
                            aria-label="{{#str}} frontpage:search, theme_nova {{/str}}"
                            data-region="search-input"
                        >
                        <input
                            type="hidden"
                            name="context"
                            value="{{{output.pagecontextid}}}"
                        >
                       <input
                            type="hidden"
                            name="page"
                            value="search"
                        >
                        <input
                            type="hidden"
                            name="showcatid"
                            value=-1
                        >
                        <div class="input-group-append">
                            <button
                                class="btn btn-blue030 btn-lg"
                                type="submit"
                                data-action="search"
                            >
                                <span data-region="search-icon-container">
                                    {{#pix}} a/search, core {{/pix}}
                                </span>
                                <span class="hidden" data-region="loading-icon-container">
                                    {{> core/loading }}
                                </span>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>